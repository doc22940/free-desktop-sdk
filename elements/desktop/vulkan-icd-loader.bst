kind: cmake

depends:
- filename: bootstrap-import.bst
- filename: desktop/vulkan-headers.bst
- filename: desktop/xorg-lib-x11.bst
- filename: desktop/xorg-lib-xrandr.bst
- filename: desktop/wayland.bst
- filename: base/buildsystem-cmake.bst
  type: build

variables:
  cmake-local: |
    -DCMAKE_SKIP_RPATH:BOOL=yes \
    -DBUILD_VKJSON=OFF \
    -DBUILD_WSI_MIR_SUPPORT=OFF \
    -DCMAKE_INSTALL_SYSCONFDIR:PATH=%{libdir} \
    -DBUILD_TESTS=OFF \
    -DBUILD_WSI_XCB_SUPPORT=On \
    -DBUILD_WSI_XLIB_SUPPORT=On \
    -DBUILD_WSI_WAYLAND_SUPPORT=On \
    -DBUILD_DEMOS=OFF \
    -DBUILD_LAYERS=OFF

public:
  bst:
    split-rules:
      devel:
        (>):
        - '%{libdir}/libvulkan.so'

sources:
- kind: tar
  url: github:KhronosGroup/Vulkan-Loader/archive/v1.1.96.tar.gz
  ref: 3f210eaa8bd1f3c57fc0a413aaa18f671c43d130a0ce60479ede23a9d1314f86
- kind: patch
  path: patches/vulkan-icd-loader-libdir-path.patch
