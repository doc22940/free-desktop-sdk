{
  "app-id": "test.codecs.full",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08beta",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Platform.ffmpeg-full-codecs"
  ],
  "command": "codec-list.sh",
  "modules": [
    {
      "name": "ffmpeg-full",
      "buildsystem": "simple",
      "build-commands": ["/usr/lib/ffmpeg/enable.sh"]
    },
    {
      "name": "codec-list",
      "buildsystem": "simple",
      "build-commands": [
        "install -D codec-list.sh /app/bin/codec-list.sh"
      ],
      "sources": [
        {
          "type": "file",
          "path": "codec-list.sh"
        }
      ]
    }
  ]
}
